<% provide :title, t("users.edit.title") %>
<% provide :button_text, t("users.edit.save") %>
<h1><%= t "users.edit.update" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form", user: @user %>
    <p><div class="gravatar_edit">
      <%= image_tag @user.gravatar_url,
        class: "img-responsive", alt: @user.first_name %>
      <a href="http://gravatar.com/emails" target="_blank">
        <%= t "users.edit.submit" %></a>
    </div></p>
  </div>
</div>

<li>
  <%= image_tag user.gravatar_url,
    class: "img-responsive img-circle", alt: user.first_name %>
  <p><%= link_to user.first_name, user %>
    <% if current_user.admin? && !current_user?(user) %>
      | <%= link_to t("users.user.delete"), user, method: :delete,
      data:{confirm: t("users.user.sure")} %>
    <% end %></p>
</li>
